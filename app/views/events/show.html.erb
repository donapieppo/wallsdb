<h1><%= link_to @event.wall, @event.wall %></h1>

<%= render @event, complete: true %>  

<% if @other_events.any? %>  
  <h2>Altri eventi</h2>  
  <div class="row">
    <% @other_events.each do |event| %>  
      <div class="col-md-4 col-md-offset-4">
        <%= render event %>  
      </div>
    <% end %>
  </div>
<% end %>
