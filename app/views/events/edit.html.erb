<div class="container">
<h1><%= link_to @event.wall, wall_path(@event.wall)  %> </h1>
<fielset>
<label>Modifica dati evento</label>
<%= render partial: 'form' %>  
</fielset>

<fielset class="event-gallery">
<legend>Immagini</legend>

<div class="row">
  <% @event.photos.each do |photo| %>  
    <div class="col-xs-6 col-md-2">
      <div class='thumbnail'>
        <%= image_tag photo.image.url %>  
      </div>
      <div class="caption">
        <%= link_to_delete photo_path(photo) %>  
      </div>
    </div>
  <% end %>
</div>

<%= simple_form_for [@event, @event.photos.new] do |photo| %>  
  <%= photo.input :image, as: :file, label: 'Nuova Foto' %>  
  <%= photo.input :importance, collection: ['a', 'b', 'c'], as: :radio_buttons, boolean_style: :inline %>  
  <%= photo.submit %>  
<% end %>
</fielset>
</div>


