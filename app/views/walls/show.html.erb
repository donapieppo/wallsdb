<center>
  <h1><%= @wall.name %> <%= link_to_edit [:edit, @wall] if current_user && current_user.owns?(@wall) %></h1>
</center>

<div class="wall">
  <div class="wall-description">
    <p><%= fwicon('external-link') %> <%= link_to 'pagina web ufficiale', @wall.web %> </p>
    <p><%= raw @wall.description %></p>
    <p><%= link_to_new 'Segnala prossimo evento', new_wall_event_path(@wall) %></p>  
  </div>
  <div class="wall-gmap">
    <iframe src="<%= simple_gmap_url(@wall.gmap_address) %>"></iframe>
    <p>
    <dl class="dl-horizontal">
      <dt><%= fwicon('map-marker') %></dt>
      <dd><%= @wall.address %> - <%= @wall.city %> (<%= @wall.province.sig %>)</dd>
      <dt><%= fwicon('calendar') %></dt>  
      <% @wall.openings.each do |opening| %>  
        <dd><%= opening %></dd>
      <% end %>
    </dl>
    </p>
    
  </div>
</div>

<%= details_bar(@wall) %>  

<div class="row">
  <% @wall.photos.each do |photo| %>  
    <div class="col-xs-6 col-md-2">
      <span class='thumbnail'>
        <%= image_tag photo.image.thumb.url %>  
      </span>
    </div>
  <% end %>
</div>

<% @wall.events.each do |event| %>  
  <div class="well">
    <h2><%= event.name %> <%= link_to_edit([:edit, event]) if current_user.owns?(event) %>  </h2>
    <h3><%= l event.start_date %></h3>
    <p><%= event.description %> </p>
  </div>
<% end %>




<%= javascript_tag do  %>  
  $(function () {
    $('[data-toggle="popover"]').popover()
  })
<% end %>
