<div class="wall-form">
<%= horizontal_form_for @wall do |wall| %>  
  <fielset class="wall-main">
  <legend>Dati principali</legend>
  <%= wall.dm_error_notification %>  
  <%= wall.input :name %>  
  <%= wall.input :description, as: :text %>  
  <%= wall.input :contact %>  
  <%= wall.input :address %>  
  <%= wall.input :cap %>  
  <%= wall.input :city %>  
  <%= wall.association :province, include_blank: false %>  
  </fielset>

  <fielset class="wall-details">
  <legend>Dettagli</legend>
  <%= wall.input :boulder %>  
  <%= wall.input :rope %>  
  <%= wall.input :training %>  
  <%= wall.input :bar %>  
  <%= wall.input :music %>  
  </fielset>

  <fielset>
    <%= wall.submit %>  
  </fielset>
<% end %>

<% unless @wall.new_record? %>  
  <fielset class="wall-openings">
  <legend>Aperture</legend>
  <%= render partial: 'openings/form', locals: {wall: @wall} %>  
  </fielset>
<% end %>

<% unless @wall.new_record? %>  
  <fielset class="wall-prices">
  <legend>Prezzi</legend>
  </fielset>
<% end %>
</div>
