<%= form_tag show_province_path, remote: true, id: 'search-province-home', class: 'form-inline' do %>  
  <div class="form-group">
    <input class="typeahead form-control" type="search" name="province" placeholder="<%= t :choose_city %>" /> 
  </div>
  <div class="form-group">
    <input id="show_province" type="submit" value="invia"/> 
  </div>
<% end %>

<%= render partial: 'typeahead_province' %>  

<div class="container">
  <h2 class="centered"><%= t :events %></h2>

  <div class="row">
    <% group_in_4(@events).each do |event_group|%>  
      <div class="col-md-3">
        <% event_group.each do |event| %>  
          <%= render event %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<h2><center><%= t :walls %></center></h2>

<div class="home-map" style="border: 4px double #000">
  <%= render partial: 'main_google_map' %>  
</div>

